<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="122dp"
    tools:layout_editor_absoluteY="231dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.appodeal.ads.BannerView
            android:id="@+id/appodealBannerView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="364dp" />

        <Button
            android:id="@+id/btnBanners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnBtnBannersClick"
            android:text="Banners" />

        <Button
            android:id="@+id/btnInterstitials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="onBtnInterstitialsClick"
            android:text="Interstitials"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnRVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="onBtnRVideoClick"
            android:text="Rewarded video"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtbNativeClick"
            android:text="Native"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/nativeAdsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>